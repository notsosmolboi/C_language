//Palindrome
#include <stdio.h>
#include <string.h>
void main(){
    char a[10];
    printf("Enter a word : ");
    scanf("%s",a);
    for(int i=0,j=(strlen(a)-1);i<=j;i++,j--)
        if(a[i]!=a[j]){
            printf("\nNot a palindrome");
            return;
        }
        else
            printf("\npalindrome");
}
