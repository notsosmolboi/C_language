#include<stdio.h>
void isPrime(int n);
void main(){
    int a;
    printf("Enter a number : ");
    scanf("%d",&a);
    isPrime(a);
} 
void isPrime(int n)
{
    int a=n,count=0;
    if(a==2){
         printf("%d is a prime",a);
    }
    else{
         for(int i=3;i<a;i++){
             if(a%i==0)
                 count++;
         }            
    }
    if(count!=0){
         printf("%d is not a prime",a);
         return;
    }
    printf("it is prime");
}
