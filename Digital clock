#include<stdio.h>
void main()
{
    int h,m,s;
    h=12;
    m=50;
    s=50;
    while(1){
        printf("\n\n\t\t %02d : %02d : %02d",h,m,s);
        sleep(1);
        clrscr();
        s++;
        if(s==60){
            s=0;
            m++;
        }
        else if(m==60){
            m=0;
            h++;
        }
        else{
            s=0;
            m=0;
            h=0;
        }
    }
}